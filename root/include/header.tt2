    <link href="/include/style.css" rel="stylesheet" type="text/css" />
    <link href="/include/vertically-aligned.css" rel="stylesheet" type="text/css" />
    <link href="/include/clusterstyle.css" rel="stylesheet" type="text/css" />
    <link href="/include/tipsy.css" rel="stylesheet" type="text/css" />
    
    [% INCLUDE include/word_cloud.css %]
    

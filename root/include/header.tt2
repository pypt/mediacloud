  <body>
    <h1>
      [% title | html %]
    </h1>
    <div id="menu">
      <ul>
        <li>
          <a href="[% c.uri_for('/media/list') %]">Home</a>
        </li>
        <li>
          <a href="[% c.uri_for('/media/create_batch') %]">Add Media</a>
        </li>
        <li>
          <a href="[% c.uri_for('/media/moderate') %]">Moderate Media</a>
        </li>
        <li>
          <a href="[% c.uri_for('/downloads/list') %]">All Downloads</a>
        </li>
        <li>
          <a href="[% c.uri_for('/queries/list') %]">Queries</a>
        </li>
        <li>
          <a href="[% c.uri_for('/dashboards/list') %]">Dashboards</a>
        </li>
        <li style="list-style: none">[% IF submenu_items -%]
        </li>
        <li>|
        </li>
        <li style="list-style: none">[% FOREACH item IN submenu_items -%]
        </li>
        <li>
          <a href="[% c.uri_for(item.0) _ '?' _ item.1 %]">[% item.2 %]</a>
        </li>
        <li style="list-style: none">[% END #[% FOREACH i IN submenu_items -%] [% END #[% IF menu_items -%]
        </li>
      </ul>
    </div>
    <p>
      [% IF status_msg || c.request.params.status_msg -%] [% SET msgs = status_msg || c.request.params.status_msg -%] [% SET msg_list = msgs.split("\n") -%]
    </p>
    <div id="status">
      [% FOREACH msg IN msg_list -%] [% msg | html %]<br />
      [% END #[% FOREACH msg IN msg_list -%]
    </div>
    <p>
      [% END #[% IF status_msg || c.request.params.status_msg -%] [% IF error_msg || c.request.params.error_msg -%] [% SET msgs = error_msg || c.request.params.error_msg -%] [% SET msg_list = msgs.split("\n") -%]
    </p>
    <div id="error">
      [% FOREACH msg IN msg_list -%] [% msg | html %]<br />
      [% END #[% FOREACH msg IN msg_list -%]
    </div>
    <p>[% END #[% IF error_msg || c.request.params.error_msg -%]</p>


		 if (	parsed_query_1['topic'] && !parsed_query_0['topic'] )
		 {
		    parsed_query_0['topic'] = 'All';
		 }

		 if ( 	query.query_1_description && (parsed_query_0['topic'] != parsed_query_1['topic']) )
		 {
		    topic_str = parsed_query_0['topic'] + ' vs. ' + parsed_query_1['topic'];

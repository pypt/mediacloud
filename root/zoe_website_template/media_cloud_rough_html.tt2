		 }

		 var text = source_str + ' - ';

		 if (topic_str)
		 {
		   //alert('Topic:' + topic_str);
		   text +=  topic_str + ' - ';
		 }
		 
		 text += week_str;
	
	         $('<a/>').attr('href', query.url).text(text).appendTo($('<li/>').appendTo(popular_queries_list));
	      } );
	    } );

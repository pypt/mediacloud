<script type="text/javascript">
var feedcontainer=document.getElementById("hotLinks")
var feedurl="http://www.latimes.com/mynews/e-edition-right-rail/rss2.0.xml"
var feedlimit=6
var rssoutput=""


function rssfeedsetup(){
var feedpointer=new google.feeds.Feed(feedurl)
feedpointer.setNumEntries(feedlimit)
feedpointer.load(displayfeed)//check here
}

function displayfeed(result){
if (!result.error){
var thefeeds=result.feed.entries
rssoutput+='<span class="hotLinkBegin">In the News:</span>'
for (var i=0; i<thefeeds.length; i++)
rssoutput+="<li class='row" + i + "'><a href='" + thefeeds[i].link + "'>" + thefeeds[i].title + "</a></li>"
feedcontainer.innerHTML=rssoutput
}
else{
rssoutput+=" "
}
}

rssfeedsetup();

</script>  



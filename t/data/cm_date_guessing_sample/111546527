		<script type="text/javascript">
		// PDF tracker
		var pdfTrkrParentId = "page-size", pdfTrkrMatchStr = [".pdf", ".doc"];
		function pdfTrkr(e) { var eTgt = YAHOO.util.Event.getTarget(e); 
			while (eTgt.id !== pdfTrkrParentId) {
				if (eTgt.nodeName.toUpperCase() === "A") {
					if (eTgt.href && (eTgt.href.indexOf(pdfTrkrMatchStr[0]) > 0 || eTgt.href.indexOf(pdfTrkrMatchStr[1]) > 0)) {
						var gaHref = (parseUri) ? parseUri(eTgt.href).path : eTgt.href;
						_gaq.push(['_trackPageview', gaHref]);
					}
					break;
				} else {
					eTgt = eTgt.parentNode;
				}
			}
		}
		addDOMLoadEvent(function() {
			YAHOO.util.Event.on(pdfTrkrParentId, "click", pdfTrkr);
		});
		</script>






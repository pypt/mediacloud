		  	var paramInt = parseInt(param); /* Convert string to integer */
		  	var starttab = (paramInt > 0) ? paramInt : 0; /* Use as 'startAt' value in FS init */
		  
		  	/* Flex Slider init */
		    $('.flexslider').flexslider({
		    	animation: "slide",
		    	animationLoop: false,
		    	smoothHeight: true,
		    	startAt: starttab,
		    	slideshow: false,
		    	touch: false, /* Turn off touch swipe. Makes it difficult to read long articles */
		    	controlNav: true,
			    manualControls: ".flex-control-nav li a",
		    	directionNav: false,
		    	prevText: "Previous",
		    	nextText: "Next",
		    	keyboard: false,
		    	before: function(slider) {
		    		/* Mobile nav - on selection, update menu button label, close menu */
						if ($('.mobile-nav').is(':visible')) { 
		  				var datalabel = slider.slides.eq(slider.animatingTo).attr('data-label');
		  				$('.nav-bu-menu').text(datalabel);
							$('.flex-control-nav').slideUp('fast');
						}
		    	}
		    });
		    
		    /* Hide/Reveal dropdown nav */
 		  	$('.mobile-nav a').click(function(e) {
 		  		$('.flex-control-nav').slideToggle('fast');
					e.preventDefault();
				});
								
 		  	/* Hide/Reveal Embed Code */
 		  	$('.embed a').click(function(e) {
 		  		$(this).siblings('textarea').toggleClass('selected');
 		  		$(this).toggleClass('selected');
					e.preventDefault();
				});

 		  	/* Hide/Reveal Permalink Code */
 		  	$('.permalink a').click(function(e) {
 		  		$(this).siblings('input').toggleClass('selected');
 		  		$(this).toggleClass('selected');
					e.preventDefault();
				});

				/* Check if screen becomes wider via orientation change or resize.
				If so, remove 'display: none' inline style placed by jQuery.
				(Can't cleanly override with CSS media queries) */
				$(window).bind('orientationchange resize', function(event){
					 if ( $('.flex-control-nav').width() > 550 ) {
						$('.flex-control-nav').removeAttr('style');
					}	
				});

		  });


		</script>



	
		<!-- ====== STATE PROPOSITIONS - end ===== -->
	



	   

